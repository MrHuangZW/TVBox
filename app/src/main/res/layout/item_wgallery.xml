<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/focusrelativelayout"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_5">

    <RelativeLayout
        android:id="@+id/tv_box_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="10dp"
        android:background="@drawable/imagebanner"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tv_box_image"
            android:layout_width="110dp"
            android:layout_height="69dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_gallery"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_box_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_23"
            android:layout_alignBottom="@+id/tv_box_image"
            android:background="@drawable/bottom_radius"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>